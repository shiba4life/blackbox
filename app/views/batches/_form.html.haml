= simple_form_for(@batch) do |f|
	#items
		- if current_user
			= f.hidden_field :user_id, value: current_user.id
		= f.simple_fields_for :items do |item|
			= render 'item_fields', f: item
		.links
			= link_to_add_association 'add item', f, :items, class: "new-item-btn"
	= f.submit "Next", class: "btn btn-success btn-lg"
