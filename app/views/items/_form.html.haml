- item ||= @item

= simple_form_for(item) do |f|
  = f.error_notification
  .row
    .col-sm-3
      = f.input :name
    .col-sm-2.col-xs-6
      = f.input :price, as: :currency
    .col-sm-2.col-xs-6
      = f.input :original_price, as: :currency
    .col-sm-3
      = f.input :brand, placeholder: "ex. Burton"
    .col-sm-2.col-xs-6
      = f.input :color, input_html: {class: "color-picker"}
    .col-sm-2.col-xs-6
      = f.input :age, placeholder: "in years"
    .col-sm-6
      = f.input :blemishes, placeholder: "ex. chipped corner"
    .col-sm-4
      = f.input :url
  .form-inputs
    = f.input :description
  .row
    .col-sm-3
      %h1 Images
      = f.filepicker_field :filepicker_image_urls, class: "form-control", onchange: 'onPhotoupload(event)', multiple: true
      %br
  .images
    = render '/items/images', files: item.filepicker_image_urls unless item.filepicker_image_urls.blank?
  %br
  .form-actions
    = f.submit "Next", class: "btn btn-success btn-lg"
