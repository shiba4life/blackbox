%h1 Listing items

%table
  %thead
    %tr
      %th Batch
      %th Name
      %th Brand
      %th Price
      %th Color
      %th Age
      %th Blemishes
      %th Original price
      %th Url
      %th Description
      %th
      %th
      %th
      
  %tbody
    - @items.each do |item|
      %tr
        %td= item.batch
        %td= item.name
        %td= item.brand
        %td= item.price
        %td= item.color
        %td= item.age
        %td= item.blemishes
        %td= item.original_price
        %td= item.url
        %td= item.description
        %td= link_to 'Show', item
        %td= link_to 'Edit', edit_item_path(item)
        %td= link_to 'Destroy', item, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Item', new_item_path
